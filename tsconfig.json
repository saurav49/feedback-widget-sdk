{
  "compilerOptions": {
    "target": "ES6",
    "module": "esnext",
    "jsx": "react-jsx",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/": ["./src/*"],
      "@/components": ["./src/components/*"],
      "@/lib": ["./src/lib/*"]
    }
  }
